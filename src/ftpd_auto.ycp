/**
 * File:	clients/ftpd_auto.ycp
 * Package:	Configuration of ftpd
 * Summary:	Client for autoinstallation
 * Authors:	Jozef Uhliarik <juhliarik@suse.cz>
 *
 * $Id: ftpd_auto.ycp 27914 2006-02-13 14:32:08Z locilka $
 *
 * This is a client for autoinstallation. It takes its arguments,
 * goes through the configuration and return the setting.
 * Does not do any changes to the configuration.
 */

/**
 * @param function to execute
 * @param map/list of ftpd settings
 * @return map edited settings, Summary or boolean on success depending on called function
 * @example map mm = $[ "FAIL_DELAY" : "77" ];
 * @example map ret = WFM::CallFunction ("ftpd_auto", [ "Summary", mm ]);
 */

{

textdomain "ftpd";

y2milestone("----------------------------------------");
y2milestone("Ftpd auto started");

import "Ftpd";
include "ftpd/wizards.ycp";

any ret = nil;
string func = "";
map param = $[];

/* Check arguments */
if(size(WFM::Args()) > 0 && is(WFM::Args(0), string)) {
    func = (string)WFM::Args(0);
    if(size(WFM::Args()) > 1 && is(WFM::Args(1), map))
	param = (map) WFM::Args(1);
}
y2debug("func=%1", func);
y2debug("param=%1", param);

/* Create a summary*/
if(func == "Summary") {
    ret = select(Ftpd::Summary(), 0, "");
}
/* Reset configuration */
else if (func == "Reset") {
    Ftpd::Import($[]);
    ret = $[];
}
/* Change configuration (run AutoSequence) */
else if (func == "Change") {
    ret = FtpdAutoSequence();
}
/* Import configuration */
else if (func == "Import") {
    ret = Ftpd::Import(param);
}
/* Return actual state */
else if (func == "Export") {
    ret = Ftpd::Export();
}
/* Return needed packages */
else if (func == "Packages") {
    ret = Ftpd::AutoPackages();
}
/* Read current state */
else if (func == "Read") {
    import "Progress";
    boolean progress_orig = Progress::set (false);
    ret = Ftpd::Read();
    Progress::set (progress_orig);
}
/* Write givven settings */
else if (func == "Write") {
    import "Progress";
    boolean progress_orig = Progress::set (false);
    Ftpd::write_only = true;
    ret = Ftpd::Write();
    Progress::set (progress_orig);
}
/* Unknown function */
else {
    y2error("Unknown function: %1", func);
    ret = false;
}

y2debug("ret=%1", ret);
y2milestone("Ftpd auto finished");
y2milestone("----------------------------------------");

return ret;

/* EOF */
}
